<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_bluetooth_searching_black_48dp"
        />

    <TextView
        android:id="@+id/textBtaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BT Addr"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/icon"
        />

    <TextView
        android:id="@+id/btaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34:56:78:90:AB"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/textBtaddr"
        />

    <TextView
        android:id="@+id/textBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beacon ID"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/btaddr"
        />

    <TextView
        android:id="@+id/bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890ABCDEF"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/textBid"
        android:layout_below="@+id/btaddr"

        />

    <TextView
        android:id="@+id/textMaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Major"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/icon"
        android:layout_below="@+id/bid"
        />

    <TextView
        android:id="@+id/major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:minEms="5"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/textMaj"
        android:layout_below="@+id/bid"
        />

    <TextView
        android:id="@+id/textMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minor"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/major"
        android:layout_below="@+id/bid"
        />

    <TextView
        android:id="@+id/minor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:minEms="5"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/textMin"
        android:layout_below="@+id/bid"
        />

</RelativeLayout>
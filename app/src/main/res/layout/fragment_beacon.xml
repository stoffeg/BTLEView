<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragbeacon"
    android:background="#FFFFFF"
    tools:context="com.elcris.btleview.BeaconActivityFragment">

<ImageView
    android:id="@+id/icon"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:src="@mipmap/ic_bluetooth_searching_black_48dp"
    />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textBtaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BT Addr"
        android:textSize="18dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/btaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34:56:78:90:AB"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beacon ID"
        android:textSize="18dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234567890ABCDEF"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textMaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Major"
            android:textSize="18dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"
            android:textSize="18dp"
            android:minEms="5"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minor"
            android:textSize="18dp"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345"
            android:textSize="18dp"
            android:minEms="5"
            android:textStyle="bold"
            android:layout_margin="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textSize="18dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.1234567890"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/textFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:textSize="18dp"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/fequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/textProp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propagation factor"
        android:textSize="18dp"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/propagation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.0"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:hint="2-4.5" />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="45"
        android:progress="20"
        />

</LinearLayout>

</LinearLayout>
